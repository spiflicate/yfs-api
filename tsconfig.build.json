{
   "extends": "./tsconfig.json",
   "compilerOptions": {
      "outDir": "./dist",
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "module": "ESNext",
      "moduleResolution": "node",
      "target": "ES2020",
      "lib": ["ES2020"],
      "noEmit": false,
      "allowImportingTsExtensions": false,
      "verbatimModuleSyntax": false
   },
   "include": ["src/**/*"],
   "exclude": [
      "node_modules",
      "dist",
      "**/*.test.ts",
      "tests",
      "examples",
      "scripts"
   ]
}
