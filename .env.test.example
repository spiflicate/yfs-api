# Yahoo API Credentials
YAHOO_CLIENT_ID=your_client_id_here
YAHOO_CLIENT_SECRET=your_client_secret_here

# OAuth Tokens (get from .oauth2-tokens.json)
YAHOO_ACCESS_TOKEN=your_access_token_here
YAHOO_REFRESH_TOKEN=your_refresh_token_here  
YAHOO_TOKEN_EXPIRES_AT=your_expiration_timestamp_here

# Test League and Team Keys
# Get these from your Yahoo Fantasy league URL
# Example: https://hockey.fantasysports.yahoo.com/hockey/12345/1
# League Key: nhl.l.12345
# Team Key: nhl.l.12345.t.1
TEST_LEAGUE_KEY=nhl.l.YOUR_LEAGUE_ID_HERE
TEST_TEAM_KEY=nhl.l.YOUR_LEAGUE_ID_HERE.t.YOUR_TEAM_ID_HERE

# Optional
DEBUG=false
SKIP_INTEGRATION_TESTS=false
